<root>

    <window id="main" title="Players">
        <panel id="mainPanel" columns="1">

            <panel id="panel1" columns="2" hAlign="center">
                <button id="btn"> Left </button>
                <button id="btn1"> Right </button>
            </panel>

            <panel id="player-info" columns="4" hSpacing="2">

                <panel id="player-firstName" columns="1" >
                    <label bgColor="#AA8612">First Name</label>
                </panel>
                <panel id="player-nickName" columns="1" >
                    <label bgColor="#AA8612">Nickname</label>
                </panel>
                <panel id="player-lastName" columns="1" >
                    <label bgColor="#AA8612">Last name</label>
                </panel>
                <panel id="player-skillRating" columns="1" >
                    <label bgColor="#AA8612">Skill</label>
                </panel>

            </panel>

        </panel>
    </window>

    <window id="other" title="Teams" left="80" top="0">
        <panel id="mainOtherPane;" columns="1">

            <panel id="team-info" columns="2" hSpacing="3">

                <panel id="team-name" columns="1">
                    <label bgColor="#AA8612">Name</label>
                </panel>
                <panel id="team-acronym" columns="1">
                    <label bgColor="#AA8612">Acronym</label>
                </panel>

            </panel>

        </panel>
    </window>

    <window id="welcome-window" title="Welcome to CS:GO Manager!" centered="">
        <panel id="welcome-window-main-panel" columns="1" hMargin="3" vMargin="2" vSpacing="1">
            <panel id="new-game-panel">
                <label fgColor="#646464">Start from scratch and make it big!</label>
                <button id="new-game-button"> New Game </button>
            </panel>
            <panel id="load-game-panel">
                <label fgColor="#646464">Continue your career.</label>
                <button id="load-game-button"> Load Game </button>
<!--                <label id="save-found-text" fgColor="#BEBBBB">Kry Eger | 14:30:24</label>-->
                <label id="no-save-found-text" fgColor="#952A28">No save found.</label>
            </panel>
            <panel id="options-panel">
                <label fgColor="#646464">Options and stuff.</label>
                <button id="options-button"> Options </button>
            </panel>
            <panel id="exit-panel">
                <label fgColor="#646464">Sad to see you go...</label>
                <button id="options-button"> Exit </button>
            </panel>
        </panel>
    </window>

    <window id="new-game-window" title="New Game" centered="">
        <panel id="new-game-window-main-panel" columns="1" hMargin="2" vMargin="1" vSpacing="1">

            <panel id="new-game-window-top-panel" columns="2">
                <panel id="new-game-window-top-left-panel">
                    <label fgColor="#646464" hAlign="end">First Name</label>
                    <label fgColor="#646464" hAlign="end">Last Name</label>
                    <label fgColor="#646464" hAlign="end">Team Name</label>
                    <label fgColor="#646464" hAlign="end">Team Acronym</label>
                </panel>
                <panel id="new-game-window-top-right-panel">
                    <textbox id="first-name-textbox" width="12">Kry</textbox>
                    <textbox id="last-name-textbox" width="12">Eger</textbox>
                    <textbox id="team-name-textbox" width="12">TeamName</textbox>
                    <textbox id="team-acronym-textbox" width="12">TN</textbox>
                </panel>
            </panel>

            <panel id="new-game-window-starting-money-panel" columns="2">
                <panel id="new-game-window-starting-money-label" vAlign="center" lMargin="3">
                    <label fgColor="#646464" hAlign="end">Difficulty</label>
                </panel>
                <panel id="new-game-window-starting-money-radio-panel" hAlign="center">
                    <radio id="new-game-starting-money-radio">
                        <option>Easy</option>
                        <option>Medium</option>
                        <option>Hard</option>
                    </radio>
                </panel>
            </panel>

            <panel id="new-game-window-bottom-panel" columns="2">
                <panel id="new-game-window-bottom-left-panel" lMargin="8">
                    <label fgColor="#646464" hAlign="end">Money</label>
                </panel>
                <panel id="new-game-window-bottom-right-panel">
                    <label id="starting-money-label" fgColor="#85BB65" hAlign="end">$---,---.---</label>
                </panel>
            </panel>

            <button id="start-game-button" hAlign="center"> Start </button>

        </panel>
    </window>

    <window id="create-first-team-window" title="" centered="">
        <panel id="create-first-team-main-panel" columns="1">
            <panel id="create-first-team-top-panel" columns="1" hAlign="end" rMargin="1" bMargin="1">
                <label id="create-first-team-top-money-label" fgColor="#85BB65"></label>
            </panel>

            <panel id="create-first-team-players-panel" columns="5">

            </panel>

            <panel id="create-first-team-bottom-panel" hAlign="end" rMargin="1" tMargin="1">
                <button id="create-first-team-next-button">Next</button>
            </panel>
        </panel>
    </window>

    <window id="player-details-window" title="" centered="">
        <panel id="player-details-main-panel" columns="1">
            <panel id="player-details-panel" columns="2" vMargin="1">
                <label fgColor="#646464" hAlign="end">First Name</label>
                <label id="player-details-firstName"></label>
                <label fgColor="#646464" hAlign="end">Nickname</label>
                <label id="player-details-nickName"></label>
                <label fgColor="#646464" hAlign="end">Last Name</label>
                <label id="player-details-lastName"></label>
                <label fgColor="#646464" hAlign="end">Monthly Salary</label>
                <label fgColor="#85BB65" id="player-details-salary"></label>
                <label fgColor="#646464" hAlign="end">Signing Bonus</label>
                <label fgColor="#85BB65" id="player-details-signingBonus"></label>
            </panel>
            <button id="player-details-close-window-button" hAlign="center">Back</button>
        </panel>
    </window>

    <window id="main-window" title="" centered="" expanded="">
        <panel id="main-window-main-panel" columns="3" hSpread="">
            <panel id="main-window-left-panel" hSpread="" vSpacing="1" columns="2" tMargin="1">

                <panel id="main-window-actions-panel" columns="3" hSpacing="1">
                    <panel id="main-window-actions-col1-panel" vSpacing="1">
                        <button id="main-window-next-button" hAlign="center"> Next </button>
                        <button id="main-window-team-button" hAlign="center"> Team </button>
                    </panel>
                    <panel id="main-window-actions-col2-panel" vSpacing="1">
                        <button id="main-window-training-button" hAlign="center"> Training </button>
                        <button id="main-window-equipment-button" hAlign="center"> Equipment </button>
                    </panel>
                    <panel id="main-window-actions-col3-panel" vSpacing="1">
                        <button id="main-window-lineup-button" hAlign="center"> Finances </button>
                        <button id="main-window-stats-button" hAlign="center"> Stats </button>
                    </panel>
                </panel>

            </panel>

            <panel id="main-window-info-panel" columns="2">
                <panel id="main-window-info-money-panel" hAlign="end">
                    <label fgColor="#646464" hAlign="center">Money</label>
                    <label id="main-window-money" fgColor="#85BB65">$54,382.29</label>
                </panel>
            </panel>

            <panel id="main-window-right-panel"  vSpread="" vSpacing="1">

                <panel id="main-window-time-panel" hAlign="center">
                    <label fgColor="#646464" hAlign="center">Time &amp; Date</label>
                    <label id="main-window-date" hAlign="center">1 / 1 / 1</label>
                    <label id="main-window-time" hAlign="center">13:37</label>
                </panel>

                <panel id="main-window-coming-up-panel" hAlign="center">
                    <label hAlign="center" fgColor="#646464">Coming up</label>
                    <panel id="main-window-coming-up-items-panel">
                        <panel id="main-window-coming-up-item-panel">
                            <label>L2 | SomeOtherTeam | 18:40</label>
                        </panel>
                        <panel id="main-window-coming-up-item-panel">
                            <label>L2 | WhoKnowsWho | 21:40</label>
                        </panel>
                    </panel>
                </panel>

                <panel id="main-window-league-matches-panel" hAlign="center">
                    <label fgColor="#646464" hAlign="center">League Matches</label>
                    <panel id="main-window-league-matches-items-panel">

                    </panel>
                </panel>

                <panel id="main-window-latest-results-panel" hAlign="center">
                    <label fgColor="#646464" hAlign="center">Latest results</label>
                    <panel id="main-window-latest-results-items">
                        <panel id="main-window-latest-result-item">
                            <label>L1 | FaZe 1 : 0 C9</label>
                        </panel>
                        <panel id="main-window-latest-result-item">
                            <label>L1 | FN 1 : 0 B-Tr</label>
                        </panel>
                        <panel id="main-window-latest-result-item">
                            <label>L1 | MiBR 1 : 0 SK</label>
                        </panel>
                    </panel>
                </panel>

                <panel id="main-window-help" vAlign="end" hAlign="center" tMargin="1">
                    <label fgColor="#646464">Controls &amp; Help</label>
                </panel>

            </panel>

        </panel>
    </window>

</root>